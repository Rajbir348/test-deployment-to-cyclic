<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>ToDo List</title>
    
</head>
<body>
    <header>
        <nav>
            <form action="/" method="get"><button>Today</button></form>
            <form action="work" method="get"><button>Work</button></form>
        </nav>
    </header>
    <div class="container">
        <%if(workList){%>
        <h1>Work List</h1>
        <form id="todo-form" action="addWork" method="post">
        <% }else{ %>
        <h1>To-Do List</h1>
        <form id="todo-form" action="add" method="post">
            <% } %>
            <input type="text" name="task" placeholder="Add a new task" required>
            <button type="submit">Add</button>
        </form>
        <ul id="task-list">
            <!-- Tasks will be dynamically added here -->
            <form action="remove" method="post">
            <% tasks.forEach(element => {%>
            <li>
                <input type="checkbox" onchange="this.form.submit()" name="id" value="<%= element._id %>">
                <span class="task-text"><%= element.name %></span>
            </li>
            <%}); %>
            </form>
        </ul>
    </div>

</body>
</html>
